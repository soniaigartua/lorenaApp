<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.lorenaApp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StepsCounterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/padding_botton_counter"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="@dimen/width_img_avatar_dialog"
            android:layout_height="@dimen/height_img_avatar_dialog"
            android:background="@drawable/undefined" />

        <TextView
            android:id="@+id/email_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_welcome_screen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/steps_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/info_total_steps"
            android:textAllCaps="true"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_step_counter" />

        <TextView
            android:id="@+id/number_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_int"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_step_number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="@dimen/width_layout_distance"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/distance_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/info_distance"
            android:textAllCaps="true"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_step_counter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_float"
            android:paddingRight="@dimen/padding_right_measures"
            android:gravity="center"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_step_number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="metres"
                android:textColor="@color/black_color"
                android:textSize="@dimen/font_size_measures" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/width_layout_distance"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calories_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/info_calories"
            android:textAllCaps="true"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_step_counter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_float"
            android:paddingRight="@dimen/padding_right_measures"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_size_step_number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calories"
                android:textColor="@color/black_color"
                android:textSize="@dimen/font_size_measures" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

    <Button
        android:id="@+id/btn_return"
        style="@style/ButtonStyleHorizontal"
        android:layout_marginTop="@dimen/margin_button_return_counter"
        android:layout_marginRight="@dimen/padding_right_measures"
        android:text="@string/button_save_avatar" />

    <Button
        android:id="@+id/btn_reset"
        style="@style/ButtonStyleHorizontal"

        android:text="@string/button_reset_counter" />

</LinearLayout>

</LinearLayout>