<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/background_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_avatar_dialog"
        android:layout_width="@dimen/width_img_avatar_dialog"
        android:layout_height="@dimen/height_img_avatar_dialog"
        android:layout_margin="@dimen/margen_img_avatar" />

    <TextView
        android:id="@+id/name_avatar_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/black_color"
        android:textSize="@dimen/font_size_button_dialog" />

    <Button
        android:id="@+id/button_apply"
        style="@style/ButtonDialogStyle"
        android:text="@string/button_avatar_apply" />

    <Button
        android:id="@+id/button_cancel"
        style="@style/ButtonDialogStyle"
        android:layout_marginBottom="@dimen/margen_img_avatar"
        android:text="@string/button_cancel_text" />

</LinearLayout>