<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.lorenaApp" >
        <item name="android:background">@drawable/landscape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle" >
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:alpha">@dimen/alpha_button</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="ButtonDialogStyle" >
        <item name="android:textSize">@dimen/font_size_button_dialog</item>
        <item name="android:alpha">@dimen/alpha_button</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/margen_img_avatar</item>
        <item name="android:layout_width">@dimen/button_dialog_width</item>
        <item name="android:layout_height">@dimen/button_dialog_height</item>
    </style>

    <style name="ButtonStyleHorizontal" >
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:alpha">@dimen/alpha_button</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">@dimen/button_width_counter</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginTop">@dimen/margin_button_return_counter</item>
    </style>

    <style name="EditTextStyle" >
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColorHint">@color/black_color</item>
        <item name="android:textSize">@dimen/font_size_button</item>
    </style>

    <style name="ProgressBarStyle" parent="ThemeOverlay.AppCompat.Light">

        <item name="colorAccent">@color/sign_enter</item>
    </style>

</resources>
